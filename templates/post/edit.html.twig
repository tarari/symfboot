{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('css/tagsinput') }}
{% endblock %}
{% block body %}
    <div class="container-fluid">
    <div class="col-lg-8 col-md-6 col-sm-6 form-group">
        <h2>New post</h2>
        {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.summary) }}
        {{ form_row(form.contents) }}

        {{ form_row(form.tags) }}

    <button type="submit" class="btn btn-primary">
        <i class="fa fa-save" aria-hidden="true"></i>&nbsp;Modify
    </button>
        {{ form_end(form) }}
    </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('js/tagsinput') }}
{% endblock %}