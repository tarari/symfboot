{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('css/tagsinput') }}
{% endblock %}
{% block body %}
    <div class="container-fluid">
        <h2>New post</h2>
        <div class="row col-sm-6">


        {{ form_start(form) }}
        {{ form_row(form.title) }}
        {{ form_row(form.summary) }}
        {{ form_row(form.contents) }}
        {{ form_row(form.tags) }}
            <div class="form-check">
                <input class="form-check-input" name="isPublished" type="checkbox" value="" id="pubcheck">
                <label class="form-check-label" for="pubcheck">Publish</label>
            </div>
        </div>

            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save" aria-hidden="true"></i>&nbsp;Create
            </button>{{ form_end(form) }}
    </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('js/tagsinput') }}
{% endblock %}