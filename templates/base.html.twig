<!doctype html>
<html lang="{{app.request.locale}}" class="h-100">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Useful blog">

    <title>{% block title %}symfboots!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('css/app') }}
        {% endblock %}
</head>
    <body class="d-flex flex-column h-100">
    <header>
        <!-- Fixed navbar -->
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <a class="navbar-brand" href="#">Symfblog</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('app_home') }}">Home <span class="sr-only">(current)</span></a>
                    </li>
                    {% if not app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_register') }}">Register</a>
                    </li>
                    {% else %}
                        {% if is_granted('ROLE_USER') %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="nd" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Post</a>
                            <div class="dropdown-menu" aria-labelledby="nd">
                                <a class="dropdown-item" href="{{ path('app_post_new') }}"><i class="fa fa-sticky-note" aria-hidden="true"></i>&nbsp;New Post</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#"></a>
                            </div>
                        </li>

                            {% endif %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="na" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Admin</a>
                                <div class="dropdown-menu" aria-labelledby="na">
                                    <a class="dropdown-item" href="{{ path('app_admin_users') }}"><i class="fa fa-users" aria-hidden="true"></i>s&nbsp;Admin users</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="{{ path('app_admin_posts') }}"><i class="fa fa-sticky-note" aria-hidden="true"></i>&nbsp;Admin posts</a>
                                </div>
                            </li>
                        {% endif %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">Logout</a>
                        </li>
                    {% endif %}
                </ul>
                <form class="form-inline mt-2 mt-md-0">
                    <input class="form-control mr-sm-2 search-field" type="text" size="30" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                </form>
                <div class=""></div>
            </div>
        </nav>
    </header>
    <main role="main" class="flex-shrink-0">
        <div class="container">
            {% block body %}  >

            {% endblock %}
        </div>
    </main>
    <div class="container-fluid">
        <div id="fmessage">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div  class="alert alert-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
    </div>
    <footer class="footer mt-auto py-3">
        <div class="container-fluid">
            <span class="text-muted">Blog personal</span>
            <ul class="list-group">
            <li class="small list-group-item">Twitter&nbsp;<i class="fa fa-twitter-square" aria-hidden="true"></i></li>
            <li class="small list-group-item">Facebook&nbsp;<i class="fa fa-facebook" aria-hidden="true"></i></li>
            </ul>

        </div>
    </footer>
        {% block javascripts %}
            {{ encore_entry_script_tags('js/app') }}
            <script type="text/javascript">
                var URL="{{ app.request.getSchemeAndHttpHost() }}/";
            </script>

            <script src="{{ asset('js/search.js') }}"></script>
        {% endblock %}
    </body>
</html>




